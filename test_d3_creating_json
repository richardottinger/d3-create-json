   EM_KV_ARRAY<6,1> = "@hire_date"

   EM_KV_ARRAY<6,2> = "2007-10-20"

   

   CALL CREATE.KEY.VALUE.PAIRS(EM_KV_ARRAY, KEY.VALUE.PAIRS)

   JSON.STRING = KEY.VALUE.PAIRS

   

   CRT JSON.STRING

   

STOP
